<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"


        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_shaper"
            android:padding="24dp"
            >

            <TextView
                android:id="@+id/rask_tit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起阅读Tit"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/taskisDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="评价状况:    已评价"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rask_tit">

            </TextView>

            <TextView
                android:id="@+id/tasktcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="发布教师:"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskisDone" />

            <TextView
                android:id="@+id/taskstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="开始时间:"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tasktcher" />

            <TextView
                android:id="@+id/taskend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="结束时间:"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/taskstart" />

            <TextView
                android:id="@+id/taskcgjiaoshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:text="李XX"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/tasktcher"
                app:layout_constraintTop_toBottomOf="@+id/taskisDone" />

            <TextView
                android:id="@+id/taskcgstart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:text="2020-09-25 12:00"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/taskstart"
                app:layout_constraintTop_toBottomOf="@+id/taskcgjiaoshi" />

            <TextView
                android:id="@+id/taskcgend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:text="2021-12-21 12:00"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/taskend"
                app:layout_constraintTop_toBottomOf="@+id/taskcgstart" />

            <Button
                android:id="@+id/task_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>