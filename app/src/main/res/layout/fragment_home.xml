<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".main.home.HomeFragment">

        <LinearLayout
            android:id="@+id/home_linearLayouttop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar

                android:background="@color/lightskyblue"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"


                    >

                    <FrameLayout
                        android:id="@+id/FL_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">

                        <ImageView
                            android:id="@+id/iv_menu"
                            android:layout_width="31dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/login_xuesheng" />

                    </FrameLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/CardView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="60dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp">


                            <ImageView
                                android:layout_height="20dp"
                                android:layout_width="20dp"
                                app:srcCompat="@drawable/vector_drawable_iconsearch"></ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="12dp"
                                android:text="点击此处查找"
                                android:textStyle="bold"
                                android:textColor="#888787"></TextView>
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swip"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_linearLayouttop"
            app:layout_constraintVertical_bias="1.0">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"

                android:layout_height="0dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/home_linearLayouttop"
                app:layout_constraintVertical_bias="1.0">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            app:cardCornerRadius="10dp">


                            <com.youth.banner.Banner
                                android:id="@+id/banner"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                />




                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:padding="8dp"
                            android:id="@+id/ll_muens"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <LinearLayout
                                android:id="@+id/home_nume01"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="top|center"
                                    app:srcCompat="@drawable/ic_homepager_01" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:gravity="center"
                                    android:textSize="10sp"

                                    android:text="排行榜"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/home_nume02"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="top|center"
                                    app:srcCompat="@drawable/ic_homepager_02" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:gravity="center"

                                    android:text="名师微课"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/home_nume03"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="top|center"
                                    app:srcCompat="@drawable/ic_homepager_03" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:gravity="center"

                                    android:text="故事新编"
                                    android:textSize="10sp"
                                    android:textStyle="bold"

                                    android:textColor="@color/black"/>



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/home_nume04"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="top|center"
                                    app:srcCompat="@drawable/ic_homepager_04" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:gravity="center"

                                    android:text="家长阅读"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>



                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/home_nume05"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="top|center"
                                    app:srcCompat="@drawable/ic_homepager_05" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center"
                                    android:gravity="center"

                                    android:text="海洋世界"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>



                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            >

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                app:srcCompat="@drawable/ic_bookstui"
                                tools:srcCompat="@drawable/ic_bookstui" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="书籍推荐"
                                android:textColor="#4E4E4E"
                                android:layout_marginLeft="2dp"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                android:textSize="16sp"
                                android:layout_marginRight="8dp"
                                ></TextView>

                            <LinearLayout
                                android:layout_marginRight="15dp"
                                android:id="@+id/home_btnmore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="更多推荐"
                                    android:textColor="#8A8A8A"
                                    android:textSize="12sp" />

                                <ImageView
                                    android:layout_width="8dp"
                                    android:layout_height="match_parent"
                                    app:srcCompat="@drawable/ic_dayuhao" />
                            </LinearLayout>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/home_recyview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:paddingBottom="8dp">

                        </androidx.recyclerview.widget.RecyclerView>


                    </LinearLayout>










                </androidx.core.widget.NestedScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>